@{
    Layout = "~/Views/Shared/_LayoutLoggedInAdmin.cshtml";
}

<title>All Accounts</title>

<!--MAIN CONTAINER-->
<div class="admin-homepage-container">
    <!--==================LEFT SIDE=======================-->
    <div class="admin-left-container">
        <div class="admin-left-profile">
            <div class="admin-profile-photo">
                <img src="~/images/profile-3.jpg" />
            </div>
            <div class="admin-profile-name">
                <p>&#64itsCaroline</p>
                <p>click to edit</p>
            </div>
        </div>

        <div class="admin-left-sidebar">
            <a asp-controller="Admin" asp-action="AdminHomepage" class="admin-sidebar-item">
                <span><i class="uil uil-house-user"></i></span>
                <h3>Home</h3>
            </a>
            <a asp-controller="Admin" asp-action="AdminMyPosts" class="admin-sidebar-item">
                <span><i class="uil uil-folder-heart"></i></span>
                <h3>My Posts</h3>
            </a>
            <a asp-controller="Admin" asp-action="AdminFollowing" class="admin-sidebar-item">
                <span><i class="uil uil-users-alt"></i></span>
                <h3>Following</h3>
            </a>
            <a asp-controller="Admin" asp-action="AdminAllPosts" class="admin-sidebar-item">
                <span><i class="uil uil-folder-open"></i></span>
                <h3>All Posts</h3>
            </a>
            <a asp-controller="Admin" asp-action="AdminAllAccounts" class="admin-sidebar-item active">
                <span><i class="uil uil-user-plus"></i></span>
                <h3>All Accounts</h3>
            </a>
        </div>
        <div><button class="admin-left-button">CREATE POST</button></div>
    </div>

    <!--==================MIDDLE SIDE=======================-->
    <div class="bmark-user-middle-container">
        <!------------------ BOOKMARKS-------------->
        <div class="middle-bookmarks-text">
            <p>ALL ACCOUNTS</p>
        </div>

        <!----------- START OF POSTS----------->
        <div class="middle-bookmarks-post">
            <div class="bmark-user-detail">
                <div class="bmark-profile-photo">
                    <img src="~/images/profile-4.jpg" />
                </div>
                <div class="bmark-user-info">
                    <p class="bmark-username">&#64onyourmark</p>
                </div>
                <div>
                    <a href="#" class="btn-unfollow">follow</a>
                </div>
            </div>
        </div>

        <!-----------------END OF POSTS---------------->

        <div class="middle-bookmarks-post">
            <div class="bmark-user-detail">
                <div class="bmark-profile-photo">
                    <img src="~/images/profile-2.jpg" />
                </div>
                <div class="bmark-user-info">
                    <p class="bmark-username">&#64startswithj</p>
                </div>
                <div>
                    <a href="#" class="btn-unfollow">unfollow</a>
                </div>
            </div>
        </div>

        <!-- END OF POSTS-->
    </div>


    
    <!--==================RIGHT SIDE=======================-->
    <div class="search-admin-right-container">
        <div class="wrapper">
            <div class="searchBar">
                <input id="searchQueryInput"
                       type="text"
                       name="searchQueryInput"
                       placeholder="Search &#64username"
                       value="" />
                <button id="searchQuerySubmit" type="submit" name="searchQuerySubmit">
                    <svg style="width: 24px; height: 24px; color: white"
                         viewBox="0 0 24 24">
                        <path fill="#666666"
                              d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
                    </svg>
                </button>
            </div>
        </div>
        <div class="admin-search-text">
            <p>Search for more users to follow!</p>
        </div>
    </div>

    <!--END OF RIGHT SIDE-->
</div>
<!-- END OF MAIN CONTAINER-->
<!-- Modal Structure -->
<div id="profileModal" class="modal">
    <div class="modal-content">
        <div class="edit-profile-container1">
            <div class="profilephoto-text">
                <p>Profile Picture</p>
            </div>
            <div class="edit-img"><img src="~/images/user-profile.png" /></div>
            <div class="uploadimg-text">
                <button>UPLOAD PHOTO</button>
            </div>
        </div>

        <div class="edit-profile-container2">
            <div class="name-label">
                <p>USERNAME</p>
            </div>
            <div class="edit-profile-form">
                <input class="edit-profile-field"
                       type="text"
                       placeholder="Change your username"
                       name="username"
                       required />
            </div>
            <div class="name-label">
                <p>PASSWORD</p>
            </div>
            <div class="edit-profile-form">
                <input class="edit-profile-field"
                       type="text"
                       placeholder="Change your password"
                       name="password"
                       required />
            </div>
            <div class="edit-profile-btn-container">
                <button class="save-changes-btn">SAVE CHANGES</button>
                <button class="cancel-btn">CANCEL</button>
            </div>
        </div>


    </div>
</div>

<!-- Create Post Modal Structure -->
<div id="createModal" class="modal">
    <div class="create-modal-content">
        <span class="close" id="closeModalButton"><i class="uil uil-times-circle"></i></span>
        <div class="create-container">
            <input class="create-post-field"
                   type="text"
                   placeholder="Let out a roar!"
                   name="post" />
        </div>
        <button class="post-btn">POST</button>
    </div>
</div>

<!-- Add this line to include your external JavaScript file -->
<script src="~/js/script.js"></script>
