@{
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<title>Homepage</title>

<!--MAIN CONTAINER-->
<div class="user-homepage-container">
    <!--==================LEFT SIDE=======================-->
    <div class="user-left-container">
        <div class="left-profile">
            <div class="user-profile-photo">
                <img src="~/images/profile-3.jpg" />
            </div>
            <div class="user-profile-name">
                <p>Caroline Herschel</p>
                <p>&#64itsCaroline</p>
            </div>
        </div>

        <div class="left-sidebar">
            <a asp-controller="User"
               asp-action="UserHomepage"
               class="sidebar-item active">
                <span><i class="uil uil-house-user"></i></span>
                <h3>Home</h3>
            </a>
            <a asp-controller="User" asp-action="UserMyPosts" class="sidebar-item">
                <span><i class="uil uil-comment-question"></i></span>
                <h3>My Posts</h3>
            </a>
            <a asp-controller="User" asp-action="UserFollowing" class="sidebar-item">
                <span><i class="uil uil-notebooks"></i></span>
                <h3>Following</h3>
            </a>
        </div>
        <div class="left-button"><button>CREATE POST</button></div>
    </div>

    <!--==================MIDDLE SIDE=======================-->
    <div class="user-middle-container">
        <!------------------ HOMEPAGE -------------->
        <div class="middle-homepage-text">
            <p>HOMEPAGE</p>
        </div>

        <!----------- START OF POSTS----------->
        <div class="middle-homepage-post">
            <div class="user-detail">
                <div class="profile-photo">
                    <img src="~/images/profile-4.jpg" />
                </div>
                <div class="user-info">
                    <p class="name">Makoy</p>
                    <p class="username">&#64onyourmark</p>
                </div>
            </div>
            <div class="user-post">
                <p>
