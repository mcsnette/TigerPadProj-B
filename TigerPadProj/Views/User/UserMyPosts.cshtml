@{
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<title>My Posts</title>

<!--MAIN CONTAINER-->
<div class="user-inquiries-container">
    <!--==================LEFT SIDE=======================-->
    <div class="user-inq-left-container">
        <div class="left-profile">
            <div class="inq-user-profile-photo">
                <img src="~/images/profile-3.jpg" />
            </div>
            <div class="inq-user-profile-name">
                <p>&#64itsCaroline</p>
                <p>click to edit</p>
            </div>
        </div>

        <div class="inq-left-sidebar">
            <a asp-controller="User"
               asp-action="UserHomepage"
               class="sidebar-item">
                <span><i class="uil uil-house-user"></i></span>
                <h3>Home</h3>
            </a>
            <a asp-controller="User" asp-action="UserMyPosts" class="sidebar-item active">
                <span><i class="uil uil-folder-heart"></i></span>
                <h3>My Posts</h3>
            </a>
            <a asp-controller="User" asp-action="UserFollowing" class="sidebar-item">
                <span><i class="uil uil-users-alt"></i></span>
                <h3>Following</h3>
            </a>
        </div>
        <div><button class="left-button">CREATE POST</button></div>
    </div>

    <!--==================MIDDLE SIDE=======================-->
    <div class="inq-user-middle-container">
        <!------------------ HOMEPAGE -------------->
        <div class="middle-inquiries-text">
            <p>MY POSTS</p>
        </div>

        <!----------- START OF POSTS----------->
        <div class="middle-inquiries-post">
            <div class="inq-user-detail">
                <div class="inq-profile-photo">
                    <img src="~/images/profile-3.jpg" />
                </div>
                <div class="inq-user-info">
                    <p class="inq-username">&#64itsCaroline</p>
                </div>
            </div>
            <div class="inq-user-post">
                <p>
